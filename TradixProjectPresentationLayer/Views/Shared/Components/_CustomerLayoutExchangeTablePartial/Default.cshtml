@model List<HistoricalMarketData>

@{
    ViewData["Title"] = "12 Aylık Değişim Grafiği";
}
<!DOCTYPE html>
<html lang="tr">
<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>Fiyat Değişimi Grafik</title>

    <script src="https://cdn.jsdelivr.net/npm/chart.js"></script>

    <style>
        .chart-container {
            margin-top:50px;
            display: flex;
            justify-content: space-around;
            margin-top: 50px;
            flex-wrap: wrap;
        }

        .chart-box {
            width: 45%;
            margin-bottom: 30px;
        }
    </style>
</head>
<body>

   

    <div class="chart-container">
        <!-- Günlük Değişim Grafikleri -->
        <div class="chart-box">
            <canvas id="dailyGoldChart"></canvas>
        </div>
        <div class="chart-box">
            <canvas id="dailyBitcoinChart"></canvas>
        </div>
        <div class="chart-box">
            <canvas id="dailyEuroChart"></canvas>
        </div>
        <div class="chart-box">
            <canvas id="dailyEthereumChart"></canvas>
        </div>
    </div>

    <div class="chart-container">
        <!-- Aylık Değişim Grafikleri -->
        <div class="chart-box">
            <canvas id="monthlyGoldChart"></canvas>
        </div>
        <div class="chart-box">
            <canvas id="monthlyBitcoinChart"></canvas>
        </div>
        <div class="chart-box">
            <canvas id="monthlyEuroChart"></canvas>
        </div>
        <div class="chart-box">
            <canvas id="monthlyEthereumChart"></canvas>
        </div>
    </div>

    <script>
        // Altın (USD) Verileri
        const dailyGoldUSD = [1800, 1795, 1803, 1798, 1805, 1810, 1807, 1812, 1809, 1815];
        const monthlyGoldUSD = [1800, 1790, 1820, 1850, 1900, 1950, 2000, 2050, 2100, 2150, 2200, 2250];

        // Bitcoin (BTC) Verileri
        const dailyBitcoin = [30000, 30500, 30800, 30750, 31000, 31500, 31200, 31800, 32000, 32500];
        const monthlyBitcoin = [30000, 29500, 31000, 32000, 33000, 34000, 35000, 36000, 37000, 38000, 39000, 40000];

        // Euro (EUR) Verileri
        const dailyGoldEUR = [1700, 1695, 1703, 1698, 1705, 1710, 1707, 1712, 1709, 1715];
        const monthlyGoldEUR = [1700, 1690, 1720, 1750, 1800, 1850, 1900, 1950, 2000, 2050, 2100, 2150];

        // Ethereum (ETH) Verileri
        const dailyEthereum = [1500, 1550, 1570, 1560, 1580, 1600, 1595, 1610, 1620, 1650];
        const monthlyEthereum = [1500, 1480, 1550, 1600, 1650, 1700, 1750, 1800, 1850, 1900, 2000, 2100];

        // Günlük Altın (USD) Grafiği
        new Chart(document.getElementById('dailyGoldChart'), {
            type: 'line',
            data: {
                labels: ['2024-01-01', '2024-01-02', '2024-01-03', '2024-01-04', '2024-01-05', '2024-01-06', '2024-01-07', '2024-01-08', '2024-01-09', '2024-01-10'],
                datasets: [{
                    label: 'Günlük Değişim',
                    data: dailyGoldUSD,
                    borderColor: 'gold',
                    backgroundColor: 'rgba(255, 215, 0, 0.5)',
                    fill: true,
                    tension: 0.4
                }]
            },
            options: {
                responsive: true,
                plugins: {
                    title: { display: true, text: 'Altın Fiyatları Günlük Değişimi (USD)' },
                    tooltip: { mode: 'index', intersect: false }
                }
            }
        });

        // Günlük Bitcoin (BTC) Grafiği
        new Chart(document.getElementById('dailyBitcoinChart'), {
            type: 'line',
            data: {
                labels: ['2024-01-01', '2024-01-02', '2024-01-03', '2024-01-04', '2024-01-05', '2024-01-06', '2024-01-07', '2024-01-08', '2024-01-09', '2024-01-10'],
                datasets: [{
                    label: 'Günlük Değişim',
                    data: dailyBitcoin,
                    borderColor: 'blue',
                    backgroundColor: 'rgba(0, 0, 255, 0.5)',
                    fill: true,
                    tension: 0.4
                }]
            },
            options: {
                responsive: true,
                plugins: {
                    title: { display: true, text: 'Bitcoin Fiyatları Günlük Değişimi (BTC)' },
                    tooltip: { mode: 'index', intersect: false }
                }
            }
        });

        // Günlük Euro (EUR) Grafiği
        new Chart(document.getElementById('dailyEuroChart'), {
            type: 'line',
            data: {
                labels: ['2024-01-01', '2024-01-02', '2024-01-03', '2024-01-04', '2024-01-05', '2024-01-06', '2024-01-07', '2024-01-08', '2024-01-09', '2024-01-10'],
                datasets: [{
                    label: 'Günlük Değişim',
                    data: dailyGoldEUR,
                    borderColor: 'green',
                    backgroundColor: 'rgba(0, 255, 0, 0.5)',
                    fill: true,
                    tension: 0.4
                }]
            },
            options: {
                responsive: true,
                plugins: {
                    title: { display: true, text: 'Euro Fiyatları Günlük Değişimi (EUR)' },
                    tooltip: { mode: 'index', intersect: false }
                }
            }
        });

        // Günlük Ethereum (ETH) Grafiği
        new Chart(document.getElementById('dailyEthereumChart'), {
            type: 'line',
            data: {
                labels: ['2024-01-01', '2024-01-02', '2024-01-03', '2024-01-04', '2024-01-05', '2024-01-06', '2024-01-07', '2024-01-08', '2024-01-09', '2024-01-10'],
                datasets: [{
                    label: 'Günlük Değişim',
                    data: dailyEthereum,
                    borderColor: 'purple',
                    backgroundColor: 'rgba(128, 0, 128, 0.5)',
                    fill: true,
                    tension: 0.4
                }]
            },
            options: {
                responsive: true,
                plugins: {
                    title: { display: true, text: 'Ethereum Fiyatları Günlük Değişimi (ETH)' },
                    tooltip: { mode: 'index', intersect: false }
                }
            }
        });

        // Aylık Altın (USD) Grafiği
        new Chart(document.getElementById('monthlyGoldChart'), {
            type: 'line',
            data: {
                labels: ['2024-01', '2024-02', '2024-03', '2024-04', '2024-05', '2024-06', '2024-07', '2024-08', '2024-09', '2024-10', '2024-11', '2024-12'],
                datasets: [{
                    label: 'Aylık Değişim',
                    data: monthlyGoldUSD,
                    borderColor: 'gold',
                    backgroundColor: 'rgba(255, 215, 0, 0.5)',
                    fill: true,
                    tension: 0.4
                }]
            },
            options: {
                responsive: true,
                plugins: {
                    title: { display: true, text: 'Altın Fiyatları Aylık Değişimi (USD)' },
                    tooltip: { mode: 'index', intersect: false }
                }
            }
        });

        // Aylık Bitcoin (BTC) Grafiği
        new Chart(document.getElementById('monthlyBitcoinChart'), {
            type: 'line',
            data: {
                labels: ['2024-01', '2024-02', '2024-03', '2024-04', '2024-05', '2024-06', '2024-07', '2024-08', '2024-09', '2024-10', '2024-11', '2024-12'],
                datasets: [{
                    label: 'Aylık Değişim',
                    data: monthlyBitcoin,
                    borderColor: 'blue',
                    backgroundColor: 'rgba(0, 0, 255, 0.5)',
                    fill: true,
                    tension: 0.4
                }]
            },
            options: {
                responsive: true,
                plugins: {
                    title: { display: true, text: 'Bitcoin Fiyatları Aylık Değişimi (BTC)' },
                    tooltip: { mode: 'index', intersect: false }
                }
            }
        });

        // Aylık Euro (EUR) Grafiği
        new Chart(document.getElementById('monthlyEuroChart'), {
            type: 'line',
            data: {
                labels: ['2024-01', '2024-02', '2024-03', '2024-04', '2024-05', '2024-06', '2024-07', '2024-08', '2024-09', '2024-10', '2024-11', '2024-12'],
                datasets: [{
                    label: 'Aylık Değişim',
                    data: monthlyGoldEUR,
                    borderColor: 'green',
                    backgroundColor: 'rgba(0, 255, 0, 0.5)',
                    fill: true,
                    tension: 0.4
                }]
            },
            options: {
                responsive: true,
                plugins: {
                    title: { display: true, text: 'Euro Fiyatları Aylık Değişimi (EUR)' },
                    tooltip: { mode: 'index', intersect: false }
                }
            }
        });

        // Aylık Ethereum (ETH) Grafiği
        new Chart(document.getElementById('monthlyEthereumChart'), {
            type: 'line',
            data: {
                labels: ['2024-01', '2024-02', '2024-03', '2024-04', '2024-05', '2024-06', '2024-07', '2024-08', '2024-09', '2024-10', '2024-11', '2024-12'],
                datasets: [{
                    label: 'Aylık Değişim',
                    data: monthlyEthereum,
                    borderColor: 'purple',
                    backgroundColor: 'rgba(128, 0, 128, 0.5)',
                    fill: true,
                    tension: 0.4
                }]
            },
            options: {
                responsive: true,
                plugins: {
                    title: { display: true, text: 'Ethereum Fiyatları Aylık Değişimi (ETH)' },
                    tooltip: { mode: 'index', intersect: false }
                }
            }
        });

    </script>

</body>
</html>
