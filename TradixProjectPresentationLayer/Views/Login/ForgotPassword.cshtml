<style>
    body {
        margin: 0;
        height: 100vh;
        font-family: Arial, sans-serif;
        background: url('/images/background.jpg') no-repeat center center fixed;
        background-size: cover;
        display: flex;
        justify-content: center;
        align-items: center;
        flex-direction: column; /* Add flex direction column */
    }

    .forgot-password-container {
        display: flex;
        flex-direction: column;
        align-items: center;
        background-color: rgba(255, 255, 255, 0.9);
        padding: 60px;
        border-radius: 15px;
        box-shadow: 0 10px 20px rgba(0, 0, 0, 0.5);
        width: 600px;
        max-width: 90%;
    }

    h1 {
        font-size: 80px; /* Larger "Tradix" text */
        font-weight: bold;
        color: #0074d9; /* Blue color */
        margin-bottom: 20px;
        text-align: center;
    }

    .forgot-password-container h2 {
        font-size: 24px; /* Smaller "Şifremi Unuttum" text */
        font-weight: normal;
        color: #0074d9; /* Blue color */
        margin-bottom: 40px;
        text-align: center;
    }

    .forgot-password-container form {
        width: 100%;
    }

    .forgot-password-container label {
        display: block;
        font-size: 18px;
        margin-bottom: 10px;
        color: #333;
    }

    .forgot-password-container input {
        width: 100%;
        padding: 14px;
        margin-bottom: 25px;
        font-size: 16px;
        border: 1px solid #ccc;
        border-radius: 8px;
        background-color: #f7f7f7;
        color: #333;
    }

        .forgot-password-container input:focus {
            border-color: #0074d9;
            outline: none;
            box-shadow: 0 0 5px #0074d9;
        }

    .forgot-password-container button {
        width: 100%;
        padding: 15px;
        font-size: 18px;
        font-weight: bold;
        background-color: #0074d9;
        color: #fff;
        border: none;
        border-radius: 8px;
        cursor: pointer;
        transition: background-color 0.3s ease;
    }

        .forgot-password-container button:hover {
            background-color: #0056b3;
        }

    .forgot-password-container a {
        display: block;
        text-align: center;
        margin-top: 20px;
        font-size: 16px;
        color: #0074d9;
        text-decoration: none;
    }

        .forgot-password-container a:hover {
            text-decoration: underline;
        }

    .alert {
        width: 100%;
        margin-bottom: 25px;
        padding: 15px;
        border-radius: 8px;
        text-align: center;
    }

    .alert-success {
        background-color: #4caf50;
        color: #fff;
    }

    .alert-danger {
        background-color: #ff4d4d;
        color: #fff;
    }
</style>

@{
    Layout = null;
}


<h1>Tradix</h1> <!-- "Tradix" outside the form container -->

<div class="forgot-password-container">
    <h2>Şifremi Unuttum</h2> <!-- Smaller blue text -->
    <form method="post" action="/Login/ForgotPassword">
        @if (TempData["SuccessMessage"] != null)
        {
            <div class="alert alert-success">
                @TempData["SuccessMessage"]
            </div>
        }
        @if (TempData["ErrorMessage"] != null)
        {
            <div class="alert alert-danger">
                @TempData["ErrorMessage"]
            </div>
        }
        <div>
            <label for="email">E-posta:</label>
            <input type="email" id="email" name="email" placeholder="E-posta adresinizi girin" required />
        </div>
        <button type="submit">Gönder</button>
        <a href="/Login/Login">Giriş Yap</a>
    </form>
</div>